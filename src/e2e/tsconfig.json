{
  // Standalone config for e2e; do not inherit root to avoid pulling unrelated tests
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": ["ES2022", "ESNext.Disposable", "DOM"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "outDir": "./out/suite",
    "rootDir": "./src",
    "types": ["node", "mocha"]
  },
  "include": [
    "src/launch.ts",
    "src/runTest.ts",
    "src/suite/index.ts",
    "src/suite/setup.test.ts",
    "src/suite/**/*.ts",
    "src/exports/**/*.d.ts",
    "src/thea-constants.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    // Exclude legacy selected tests to avoid duplicate discovery after migration
    "src/suite/selected/**"
  ]
}